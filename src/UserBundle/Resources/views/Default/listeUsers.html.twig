{% extends "ApidaeBundle:commun:template.html.twig" %}
{% block content %}
    <h1> Gestion des utilisateurs </h1>
    <article class="filtresListe">
        <h2> Recherches </h2>
        <p> To Do </p>
    </article>

    {% for flash_message in app.session.flashbag.get('notice') %}
        <div class="flash-notice">
            {{ flash_message }}
        </div>
    {% endfor %}
    <article class="testListe">
        <h2> Utilisateurs </h2>
        {% if users is not defined or users is empty %}
            <p> Aucun utilisateurs ! </p>
        {% else %}
            <table class="tabUsers">
                <tr> <th> Pseudo </th> <th> Email </th> <th> </th> </tr>
                {% for u in users %}
                <tr>
                    <td>{{ u.username }}</td>
                    <td>{{ u.email }}</td>
                    <td class="actionsTab"><a href="{{ path('modifierUser', {'userId': u.id}) }}"> Modifier </a>
                        <a onclick="if (confirm('Etes-vous sÃ»r de vouloir supprimer cet utilisateur ?')) window.location.href={{ "'" ~ path('deleteUser', {'userId': u.id}) ~ "'" }}"
                           href="{{ path('deleteUser', {'userId': u.id}) }}"> Supprimer </a></td>
                </tr>
                {% endfor %}
            </table>
        {% endif %}

    </article>


{%  endblock %}
