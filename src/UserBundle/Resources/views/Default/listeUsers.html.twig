{% extends "ApidaeBundle:commun:template.html.twig" %}
{% block content %}
<div class="content-wrapper">
    <div class="container">
        <div class="row">
            {% if app.session.flashbag.get('notice') is not empty %}
            <div class="col-md-12" role="main">
                <div class="detail-content-wrapper">
                    <div id="section-0" class="detail-content">
                        <div class="section-title text-left">
                            <h4>{{ "Informations"|trans }}</h4>
                        </div>
                        {% for flash_message in app.session.flashbag.get('notice') %}
                            <div class="flash-notice">
                                {{ flash_message }}
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            {% endif %}

            <div class="col-md-3" role="main">
                <div class="detail-content-wrapper">
                    <div id="section-1">
                        <div class="section-title text-left">
                            <h4>{{ "Rechercher"|trans }}</h4>
                        </div>
                        <p> To Do </p>
                        <div class="sidebar-search-content">
                            <div class="sidebar-module">
                                <div class="sidebar-module-inner">
                                    <div class="sidebar-mini-search">
                                        <div class="input-group">
                                            <form id="form_recherche" action="" method="get">
                                                <input type="text" class="form-control" placeholder="ex : Lac">
                                                    <span class="input-group-btn">
                                                        <button class="btn btn-primary" type="button"><i class="fa fa-search"></i></button>
                                                    </span>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-9" role="main">
                <div class="detail-content-wrapper">
                    <div id="section-2" class="detail-content">
                        <div class="section-title text-left">
                            <h4>{{ "Gestion des utilisateurs"|trans }}</h4>
                        </div>
                        <div class="table-responsive">
                            <table class="table">
                                <tr> <th> Pseudo </th> <th> Email </th> <th> </th> </tr>
                                {% for u in users %}
                                    <tr>
                                        <td>{{ u.username }}</td>
                                        <td>{{ u.email }}</td>
                                        <td class="actionsTab"><a href="{{ path('modifierUser', {'userId': u.id}) }}"> Modifier </a>
                                        {% if u != user %}
                                        <a onclick="if (confirm('Etes-vous sÃ»r de vouloir supprimer cet utilisateur ?')) window.location.href={{ "'" ~ path('deleteUser', {'userId': u.id}) ~ "'" }}"
                                           href="{{ path('deleteUser', {'userId': u.id}) }}"> Supprimer </a>
                                        {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


{%  endblock %}
