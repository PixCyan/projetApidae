{% extends "ApidaeBundle:commun:template.html.twig" %}
{% block content %}
    {% for flash_message in app.session.flashbag.get('notice') %}
        <div class="flash-notice">
            {{ flash_message }}
        </div>
    {% endfor %}
    <article>
        <h2> Modifier un utilisateur </h2>
        <form action="{{ path('modifierUser', {'userId': user.id}) }}" method="POST">
            {{ form_widget(form) }}
            <button type="submit" value="submit">Modifier</button>
            <button type="button" onclick="javascript:history.go(-1)" value="cancel">Annuler</button>
        </form>
    </article>

{% endblock %}

