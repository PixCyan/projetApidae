{% block contentRestaurant %}

    {% if objet.objEtoile is not empty and objet.labelsQualite is not empty %}
        <article>
            <h4> Classement(s) </h4>
            <ul>
                {% if objet.objEtoile is not empty %}
                    <li>Classement Ã©toile : {{ objet.objEtoile|langueLib('Fr') }}</li>
                {% endif %}
                {% if objet.labelsQualite is not empty %}
                    {% for label in objet.labelsQualite %}
                        <li>{{ label.labLibelle|langueLib('Fr') }} {{ label.labClassement|langueLib('Fr') }}</li>
                    {% endfor %}
                {% endif %}
            </ul>
        </article>
    {% endif %}

    {% if objet.services is not empty %}
    <article>
        <h4> Services : </h4>
        <ul>
            {% for service in objet.services %}
            <li>{{ service.serLibelle|langueLib('Fr') }}
                {% if service.serInfosSup is not empty %}
                    <ul>
                        <li> {{ service.serInfosSup|langueLib('Fr') }} </li>
                    </ul>
                {% endif %}
            </li>
            {% endfor %}
        </ul>
    </article>
    {% endif %}

    {% if objet.equipements is not empty %}
    <article>
        <h4> Equipements : </h4>
        <ul>
            {% for equipement in objet.equipements %}
            <li>{{ equipement.equLibelle|langueLib('Fr') }}
                {% if equipement.equInfosSup is not empty %}
                    <ul>
                        <li> {{ equipement.equInfosSup|langueLib('Fr') }} </li>
                    </ul>
                {% endif %}
            </li>
            {% endfor %}
        </ul>
    </article>
    {% endif %}


{% endblock %}
