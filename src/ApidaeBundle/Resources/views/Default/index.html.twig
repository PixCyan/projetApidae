{% extends "ApidaeBundle:commun:template.html.twig" %}
{% block content %}
    <article>
        <h2> {{ 'Nos suggestions'|trans }} </h2>
        {% if suggestions is empty %}
        <p>{{ 'Aucune suggestion disponibles.'|trans }}</p>
        {% else %}
            {%  for suggestion in suggestions %}
                <a href="{{ path('offre', {'langueLocale': langue.lanShortCut,'id': suggestion.idObjet }) }}" ><img src="{{ suggestion.multimedias.first.mulUrl}}"></a>
            {%  endfor %}
        {% endif %}
    </article>

{% endblock %}
