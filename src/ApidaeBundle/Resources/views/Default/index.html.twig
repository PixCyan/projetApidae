{% extends "ApidaeBundle:commun:template.html.twig" %}
{% block content %}
<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
                <div class="section-title">
                    <h3>{{ 'Nos suggestions'|trans }}</h3>
                </div>
            </div>
        </div>

        <div class="grid destination-grid-wrapper">
            {% if suggestions is empty %}
                <p>{{ 'Aucune suggestion disponibles.'|trans }}</p>
            {% else %}
                {%  for suggestion in suggestions %}
                   <div class="grid-item" data-colspan="20" data-rowspan="10">
                        <a href="{{ path('offre', {'langueLocale': langue.lanShortCut,'id': suggestion.idObjet }) }}"
                           class="top-destination-image-bg" style="background-image:url('{{ suggestion.multimedias.first.mulUrl}}');">
                            <div class="relative">
                                <h4>{{ suggestion.nom|langueLib(langue.lanShortCut) }}</h4>
                            </div>
                        </a>
                    </div>
                {%  endfor %}
            {% endif %}
        </div>
    </div>
</section>
{% endblock %}
