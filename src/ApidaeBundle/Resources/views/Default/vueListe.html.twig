{% extends "ApidaeBundle:commun:template.html.twig" %}
{% block content %}
    <h1> {{ typeObjet }} :: {{ categorie.catLibelle|langueLib(langue.lanShortCut) }}</h1>
    <article class="filtresListe">
        <h2> Filtres </h2>
        <p> To Do </p>
    </article>

    {% for objet in objets %}
    <article class="testListe">
        <h2> {{ objet.nom|langueLib(langue.lanShortCut) }}</h2>
        {% if objet.multimedias is not empty %}
            <div class="imgListe">
                <a href="{{ objet.multimedias.first.mulUrl}}" ><img src="{{ objet.multimedias.first.mulUrlListe}}"></a>
            </div>
        {% endif %}

        <div class="infosListe">
            {% if objet.commune is not empty %}
                {{ objet.commune.comNom }}
            {%  endif %}
            {% if objet.categories is not empty %}
                <p> Categories :
                    {% for cat in objet.categories %}
                        {{ cat.catLibelle|langueLib(langue.lanShortCut) }}
                    {% endfor %}
                </p>
            {% endif %}
            {% if objet.tarifEnClair is not empty %}
                <p> {{ objet.tarifEnClair|langueLib(langue.lanShortCut) }}</p>
            {% endif %}

            {% if tradLangue(objet, langue) is not null %}
                <div >
                    <h4> Description : </h4>
                    <p> {{ tradLangue(objet, langue).traDescriptionCourte|langueLib(langue.lanShortCut) }} </p>
                </div>
            {% endif %}
        </div>
        <div class="lienDetailsListe">
            <a href="{{ path('offre', {'id': objet.idObjet }) }}"> Voir le d√©tail </a>
        </div>
    </article>
    {% endfor %}

{%  endblock %}
