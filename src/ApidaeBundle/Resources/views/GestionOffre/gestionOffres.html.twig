        <div class="flash-notice">
            {{ flash_message }}
        </div>
    {% endfor %}
    <article>
        <h4> Gestion des offres Apidae </h4>
        <div class="filtresListe">
            <h2> Recherches </h2>
            <form id="form_recherche" action="{{ path('gestionOffres') }}" method="post">
                {{ form_widget(form) }}
                <input type="submit" value="Rechercher" />
            </form>
        </div>
        {% if objets is defined and objets is not null %}
        <div>
            <h4> Objets correspondant Ã  votre recherche </h4>
            {% include "ApidaeBundle:Default:vueListeContent.html.twig" %}
